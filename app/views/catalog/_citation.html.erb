<%# app/views/catalog/_citation.html.erb -%>
<%-
  # Bibliographic citations for one or more documents.

  docs = documents ||= @documents
  return unless docs.present?

-%>
<h2 class="modal-title">Bibliographic Citations</h2>
<%- docs.each do |doc| -%>

  <h3 class="modal-title"><%= document_title(doc) %></h3>

  <h4><%= t('blacklight.citation.mla') %></h4>
  <%= doc.export_as_mla_citation_txt.html_safe %><br/><br/>

  <h4><%= t('blacklight.citation.apa') %></h4>
  <%= doc.export_as_apa_citation_txt.html_safe %><br/><br/>

  <h4><%= t('blacklight.citation.chicago') %></h4>
  <%= doc.export_as_chicago_citation_txt.html_safe %><br/><br/>

<%- end -%>
