<%# app/views/about/_common.html.erb -%>
<%-
  # Common elements for all About pages

  action     ||= params[:action]
  title      ||= t("blacklight.about.#{action}.title",      default: '')
  page_title ||= t("blacklight.about.#{action}.page_title", default: title)
  content_for(:page_title, page_title)

  @sidebar_tab_first = true
  content_for(:sidebar) { render 'about/sidebar' } unless request.xhr?
-%>
